<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#d4b5ab">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:text="@string/choose_mood"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        android:fontFamily="@font/amatica_sc_bold"
        />

    <Button
        android:id="@+id/mood1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mood1"
        />
    <Button
        android:id="@+id/mood2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mood2"
        />
    <Button
        android:id="@+id/mood3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mood3"
        />
    <Button
        android:id="@+id/mood4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mood4"
        />
    <Button
        android:id="@+id/mood5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mood5"
        />
    <Button
        android:id="@+id/mood6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mood6"
        />
    <Button
        android:id="@+id/mood7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mood7"
        />
    <Button
        android:id="@+id/mood8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mood8"
        />

</LinearLayout>